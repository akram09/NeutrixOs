# Get user with uid 1000 and Test for symlink on desktop
if [ ! -L "/home/$(awk -v val=1000 -F ":" '$3==val{print $1}' /etc/passwd)/Desktop/neutrixOS" ]; then
   ln -s /usr/share/doc/neutrixOS /home/$(awk -v val=1000 -F ":" '$3==val{print $1}' /etc/passwd)/Desktop/
fi
